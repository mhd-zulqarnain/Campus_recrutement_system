<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:id="@+id/row_card_view"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/job_type"
                style="@style/myFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Testting text"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/job_desc"
                style="@style/myFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/job_type"
                android:text="Testting text"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/job_vacan"
                style="@style/myFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/job_desc"
                android:text="Testting text"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Button
                android:id="@+id/btn_dlt"
                style="@style/ButtontStyle"
                android:layout_width="74dp"
                android:layout_height="40dp"
                android:layout_alignBaseline="@id/job_type"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/job_type"
                android:background="#e45454"
                android:text="Delete"

                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>