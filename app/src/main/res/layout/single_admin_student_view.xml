<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <android.support.v7.widget.CardView
        android:id="@+id/row_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/st_prf_img"
                android:layout_gravity="center"
                android:layout_marginBottom="2dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/no_img"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student name"
                android:layout_below="@id/st_prf_img"
                android:id="@+id/st_name"
                android:layout_marginRight="4dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_list"
                android:id="@+id/btn_detail"
                android:background="@null"
                android:layout_gravity="center"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/st_name"
                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_del_vec"
                android:id="@+id/del_btn_stu"
                android:background="@null"
                android:layout_toLeftOf="@id/btn_detail"
                android:layout_alignTop="@id/st_name"
                android:layout_gravity="center"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>