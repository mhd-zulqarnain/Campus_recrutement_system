<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="12dp"
    >


    <android.support.v7.widget.CardView
        android:id="@+id/row_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/st_prf_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/no_img"
                />
            <TextView
                android:id="@+id/st_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/st_prf_img"
                android:textAllCaps="true"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:text="Student name"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <ImageButton
                android:id="@+id/btn_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/st_name"
                android:layout_margin="2dp"
                android:layout_gravity="center"
                android:background="@null"
                android:src="@drawable/ic_list" />

            <ImageButton
                android:id="@+id/del_btn_stu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/st_name"
                android:layout_gravity="center"
                android:layout_toLeftOf="@id/btn_detail"
                android:background="@null"
                android:src="@drawable/ic_del_vec" />


        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>